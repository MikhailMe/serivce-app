<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="mishas.clientofapp.activities.ChoiceShopActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="134dp"
            android:background="@drawable/zenit">

            <Button
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="183dp"
                android:layout_below="@+id/button5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="29dp"
                android:layout_marginLeft="35dp"
                android:layout_marginStart="35dp"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="143dp"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/button1"
                android:layout_alignStart="@+id/button1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="327dp"
                android:layout_above="@+id/button4"
                android:layout_toLeftOf="@+id/button5"
                android:layout_toStartOf="@+id/button5" />

            <Button
                android:id="@+id/button5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/button2"
                android:layout_toStartOf="@+id/button2"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="97dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="267dp"
                tools:layout_editor_absoluteY="293dp" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/back_to_card"
            android:background="@drawable/button_back">

            <ImageView
                android:id="@+id/back_to_pay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:background="@drawable/icon_arrow_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/sendToServingApp">

            <ImageView
                android:id="@+id/next_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="55dp"
                android:layout_marginStart="55dp"
                android:background="@drawable/icon_right" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
