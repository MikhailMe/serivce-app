<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context="mishas.clientofapp.fragments.HelpFragment">

    <TextView
    android:id="@+id/textView4"
    android:layout_width="70dp"
    android:layout_height="30dp"
    android:gravity="center"
    android:text="HOT DOG\n\n200rub"
    android:textColor="#000000"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/hotdogImg"
    android:layout_toEndOf="@+id/hotdogImg"
    android:layout_alignBottom="@+id/hotdogImg"/>

    <ImageView
        android:id="@+id/hotdogImg"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/hotdog"
        android:layout_alignRight="@+id/burgerImg"
        android:layout_alignEnd="@+id/burgerImg"/>


</RelativeLayout>
