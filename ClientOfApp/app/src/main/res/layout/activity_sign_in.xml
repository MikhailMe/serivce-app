<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorBackground">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:text="@string/signIn_message"
        android:textSize="20sp"
        android:textColor="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/letsSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/sign_in"
        android:layout_below="@+id/passwordTxtIn"
        android:layout_alignLeft="@+id/passwordTxtIn"
        android:layout_alignStart="@+id/passwordTxtIn"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/passwordTxtIn"
        android:layout_alignEnd="@+id/passwordTxtIn"/>

    <Button
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/forgotPassword"
        android:layout_below="@+id/passwordTxtIn"
        android:layout_alignLeft="@+id/passwordTxtIn"
        android:layout_alignStart="@+id/passwordTxtIn"
        android:layout_marginTop="120dp"
        android:layout_alignRight="@+id/passwordTxtIn"
        android:layout_alignEnd="@+id/passwordTxtIn"/>

    <EditText
        android:id="@+id/loginTxtIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_above="@+id/passwordTvIn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/loginTvIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/loginTxt"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/passwordTxtIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text=""
        android:textColor="#000000"
        android:textSize="15sp"
        android:inputType="textPassword"
        android:layout_below="@+id/passwordTvIn"
        android:layout_alignLeft="@+id/loginTxtIn"
        android:layout_alignStart="@+id/loginTxtIn"/>

    <TextView
        android:id="@+id/passwordTvIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="@string/passwordTxt"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>