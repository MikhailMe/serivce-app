<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        />
    <TextView
        android:layout_gravity="center"
        android:gravity="bottom"
        android:id="@+id/loginTvIn"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginTxt"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/loginTxtIn"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/darker_gray"
        android:textCursorDrawable="@android:color/black"
        android:textSize="15sp" />


    <TextView
        android:layout_gravity="center"
        android:id="@+id/passwordTvIn"
        android:layout_weight="1"
        android:gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passwordTxt"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/passwordTxtIn"
        android:layout_weight="1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/darker_gray"
        android:textCursorDrawable="@android:color/black"
        android:textSize="15sp" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        />

    <Button

        android:id="@+id/letsSignIn"
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/behind"
        android:text="Войти"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_weight="1"
        android:text="или"
        android:textColor="@android:color/black"
        android:gravity="center"
        />
    <Button
        android:id="@+id/signUp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/behind"
        android:text="зарегистрироваться"
        android:textColor="#FFFFFF" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"/>
    <TextView
        android:id="@+id/forgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:gravity="center"
        android:textColor="#168de2"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        />

</LinearLayout>