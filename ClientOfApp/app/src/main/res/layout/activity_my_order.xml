<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white"
              android:orientation="vertical"
              tools:context="mishas.clientofapp.activities.ChoiceShopActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="134dp"
            android:background="@drawable/zenit">

            <Button
                android:id="@+id/button_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button_5"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="53dp"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="183dp"/>

            <Button
                android:id="@+id/button_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/button_1"
                android:layout_toRightOf="@+id/button_1"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="143dp"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/button_4"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@+id/button_5"
                android:layout_toStartOf="@+id/button_5"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="113dp"
                tools:layout_editor_absoluteY="327dp"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="36dp"
                android:layout_marginRight="36dp"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/button_2"
                android:layout_toStartOf="@+id/button_2"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="60dp"
                tools:layout_editor_absoluteY="97dp"/>

            <Button
                android:id="@+id/button_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBaseline="@+id/button_3"
                android:layout_alignBottom="@+id/button_3"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:background="@mipmap/circle"
                android:text=""
                tools:layout_editor_absoluteX="267dp"
                tools:layout_editor_absoluteY="293dp"/>

        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_back"
        android:orientation="horizontal">

        <Button
            android:id="@+id/okey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/behind"
            android:text="Ok"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
