<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mishas.clientofapp.activities.RecoveryPasswordActivity"
    android:background="@color/colorBackground">

    <Button
        android:id="@+id/recoveryPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/send"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/recoveryTxt"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/recoveryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_below="@+id/recoveryTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/recoveryTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/recovery"
        android:textColor="#000000"
        android:textSize="15sp"/>


</RelativeLayout>
